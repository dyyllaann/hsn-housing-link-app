extends layout

block content
  script.
    var countDownDate = new Date().getTime() + 6000;

    var x = setInterval(function() {
      var now = new Date().getTime();
      var distance = countDownDate - now;
      var seconds = Math.floor((distance % (1000 * 60)) / 1000);
        
      if (distance < 1) {
        document.getElementById("seconds").innerHTML = "0s ";
        window.location.replace("http://www.housingsolutionsnetwork.org");
        clearInterval(x);
      } else {
        document.getElementById("seconds").innerHTML = seconds + "s ";
      }
    }, 1000);

  h1 Your listing has been submitted. 
  h2 HSN staff will review your listing in 3-5 business days.
  div(id="redirect-message")
    span This page will redirect to the home page in 
    span#seconds 5s
