extends layout

block content
  script(type='text/javascript' src='hello.js')
  h1 Admin Dashboard
  a(href="/" class="bottom-nav") ⬅ Home
  br
  br
  if user
    div(class='admin-dashboard')
      h5 Pending Listings
      if applicants_list
      table 
        tr 
          th(style='width: 60px') Status
          th(style='width: 60px') Name
          th(style='width: 60px') Tenants 
          th(style='width: 60px') Pets
          th(style='width: 60px') Vehicles
          th Seeking
          th Location
          th Bedrooms
          th(style='width: 100px') Price Range
          th Interests
          th Story
          th(style='width: 40px') Edit
        each applicant in applicants_list
          if applicant.status == 'pending'
            tr 
              td
                form(action='/approve' method='POST')
                  button(name="approve" type="submit" value=applicant._id style="background-color: #c9e4ca; width: 100%; margin-bottom: 5px;") Approve
                form(action='/archive' method='POST')
                  button(name="archive" type="submit" value=applicant._id style="background-color: #ff7477; width: 100%;") Archive
              td #{applicant.name_formatted}
              td #{applicant.tenants}   
              td #{applicant.pets}
              td #{applicant.vehicles}
              td #{applicant.seeking.join(", ")}
              td #{applicant.preferred_location.join(", ")}
              td #{applicant.bedrooms.join(", ")}
              td #{applicant.price_range}
              td #{applicant.interests}
              td #{applicant.story}
              td
                form(action="/edit" method='GET')
                  button(type="submit" class="btn-edit" name="id" value=applicant._id) Edit
      br
      br
      h5 Approved Listings
      table 
        tr 
          th(style='width: 60px') Status
          th(style='width: 60px') Name
          th(style='width: 60px') Tenants 
          th(style='width: 60px') Pets
          th(style='width: 60px') Vehicles
          th Seeking
          th Location
          th Bedrooms
          th Price Range
          th Interests
          th Story
          th(style='width: 40px') Edit
        each applicant in applicants_list
          if applicant.status == 'approved'
            tr 
              td(style='width: 60px')
                form(action='/archive' method='POST')
                  button(name="archive" type="submit" value=applicant._id) Archive
              td #{applicant.name_formatted}
              td #{applicant.tenants}   
              td #{applicant.pets}
              td #{applicant.vehicles}
              td #{applicant.seeking.join(", ")}
              td #{applicant.preferred_location.join(", ")}
              td #{applicant.bedrooms.join(", ")}
              td #{applicant.price_range}
              td #{applicant.interests}
              td #{applicant.story}
              td
                form(action="/edit" method='GET')
                  button(type="submit" class="btn-edit" name="id" value=applicant._id) Edit
      br
      br
      h5 Archived Listings
      if applicants_list
      table 
        tr 
          th Status
          th Name
          th Tenants 
          th Pets
          th Vehicles
          th Seeking
          th Location
          th Bedrooms
          th Price Range
          th Interests
          th Story
        each applicant in applicants_list
          if applicant.status == 'archived'
            tr 
              td
                form(action='/restore' method='POST')
                  button(name="restore" type="submit" value=applicant._id) Restore
              td #{applicant.name_formatted}
              td #{applicant.tenants}   
              td #{applicant.pets}
              td #{applicant.vehicles}
              td #{applicant.seeking.join(", ")}
              td #{applicant.preferred_location.join(", ")}
              td #{applicant.bedrooms.join(", ")}
              td #{applicant.price_range}
              td #{applicant.interests}
              td #{applicant.story}
      br
      br
  else
    div(class='container-xl')
      span You must sign in to access this page.
      br
      br
      form(class='login__form' action='/login' method="POST")
        label(for="username") Username
        input(class='login__input' type="text" value="admin" name="username" id="username" placeholder="Username" autocorrect="off" autocapitalize="off" autofocus)
        label(for="password") Password
        input(class='login__input' type="password" value="BuildHouses2022!" name="password" id="password" placeholder="Password" autocorrect="off" autocapitalize="off")
        p
          input(type="submit" class="btn" value="Sign In")
  a(href="/" class="bottom-nav") ⬅ Home
